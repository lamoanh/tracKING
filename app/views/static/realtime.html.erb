<div class="row">
  <div class="col-xs-12" id="breadcrumb">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li><a href="#/realtime">Realtime Overview</a></li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <div class="box ui-draggable ui-droppable">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-table"></i>
          <span>Online users</span>
        </div>
        <div class="box-icons">
        </div>
        <div class="no-move"></div>
      </div>
      <div class="box-content">
        <center>
        <h1><%= @online %></h1>
        </center>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12">
    <div class="box" style="">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-spinner "></i>
          <span>Current Activities</span>
        </div>
        <div class="box-icons"></div>
        <div class="no-move"></div>
      </div>
      <div class="box-content">
        <p>Display current activities for users on your site</p>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>IP</th>
              <th>Location</th>
              <th>Browser</th>
              <th>OS</th>
              <th>Country</th>
            </tr>
          </thead>
          <tbody>
            <% if @data.empty? %>
            <div class="alert alert-info">No-one is online.</div>
            <% else %>
            <% @data.each do |req| %>
            <tr>
              <td><%= req["ip"] %></td>
              <td><%= req.location %></td>
              <td><%= get_useragent(req.useragent)[:browser] %></td>
              <td><%= get_useragent(req.useragent)[:os] %></td>
              <td><% 
              #get_ip_location(req.ip) 
              %></td>
            </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

